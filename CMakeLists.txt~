project (faultdetection-crm-offline)

file(GLOB_RECURSE faultdetection-crm-offline_SOURCES "src/*.cpp")
file(GLOB_RECURSE faultdetection-crm-offline_HEADERS "src/*.h")

set (faultdetection-crm-offline_INCLUDE_DIRS "")
foreach (_headerFile ${faultdetection-crm-offline_HEADERS})
    get_filename_component(_dir ${_headerFile} PATH)
    list (APPEND faultdetection-crm-offline_INCLUDE_DIRS ${_dir})
endforeach()
list(REMOVE_DUPLICATES faultdetection-crm-offline_INCLUDE_DIRS)

include_directories(${faultdetection-crm-offline_INCLUDE_DIRS})
add_executable (faultdetection-crm-offline ${faultdetection-crm-offline_SOURCES})